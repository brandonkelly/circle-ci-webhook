{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("pleodigital\\circleciwebhook\\assetbundles\\circleciwebhook\\CircleciWebhookAsset") %}

{{ forms.textField({
    label: 'CircleCi webhook URL',
    instructions: 'POST request URL',
    id: 'url',
    name: 'url',
    value: settings['url']})
}}

{{ forms.textareaField({
    label: 'CircleCi webhook params',
    instructions: 'POST request params',
    id: 'params',
    name: 'params',
    rows: 15,
    value: settings['params']})
}}